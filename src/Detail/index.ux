    margin-top: 20px;
    margin-bottom: 20px;
    font-size: 25px;
    color: #80848f;
    text-align: center;
  }
</style>
<script>
import fetch from '@system.fetch'
export default{
  protected: {
    id:'',
    userId:0,
    isLogin: false
  },
  private: {
    info: {
      url: '',
      recipeName: '',
      recipeDescription: '',
      ingredients:[],
      seasonings:[],
    },
    methods:[]
  },
  onInit() {
    var that=this

    fetch.fetch({
      url:'http://'+this.$app.$def.dataApp.ip+':8085/recipe/get-info/'+that.id,
      responseType: 'json',
      success: function(response){
        that.info.recipeName=response.data.recipeName
        that.info.url=response.data.recipeImage
        that.info.recipeDescription=response.data.recipeDescription
        that.info.ingredients=response.data.ingredients
        that.info.seasonings=response.data.seasonings
        var lis=response.data.method.split('|')
        console.log(lis)
        var index=0
        while(index<lis.length) {
          console.log(typeof(that.methods))
          that.methods.push({
            url: lis[index].trim(),
            text: lis[index+1].trim()
          })
          index+=2
        }
      }
    })
    if(that.isLogin==='true'){
      fetch.fetch({
        url:'http://'+this.$app.$def.dataApp.ip+':8085/recipe/browse?recipe-id='+that.id+'&&user-id='+that.userId,
        success: function(response){
          console.log(response.data)
        }
      })
    }
  },
}
</script>